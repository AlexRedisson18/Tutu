<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @route.name %>
</p>

<% if @route.railway_stations.empty? %>
  <p>Route has no stations</p>
<% else %>
  <p> Railway stations:
  <ul>
    <% @route.railway_stations.each do |station| %>
      <li><%= station.title %></li>
    <% end %>
  </ul>
  </p>
<% end %>

<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>
