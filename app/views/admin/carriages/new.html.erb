<h1>New Carriage</h1>

<%= form_for [:admin, @train, @carriage] do |form| %>
  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div><br>

  <div class="field">
    <%= form.label :top_seats %>
    <%= form.number_field :top_seats %>
  </div>

  <div class="field">
    <%= form.label :bottom_seats %>
    <%= form.number_field :bottom_seats %>
  </div>

  <div class="field">
    <%= form.label :side_top_seats %>
    <%= form.number_field :side_top_seats %>
  </div>

  <div class="field">
    <%= form.label :side_bottom_seats %>
    <%= form.number_field :side_bottom_seats %>
  </div>

  <div class="action">
    <%= form.submit "Create" %>
  </div>
<% end %>

<%= link_to 'Back', [:admin, @train] %>